<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @ticket.title %>
</p>

<p>
  <b>Description:</b>
  <%= @ticket.description %>
</p>

<p>
  <b>Replies:</b><br>
  <ul>
  <% @ticket.replies.each do |reply| %>
   <li><%= reply.body %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_ticket_path(@ticket) %> |
